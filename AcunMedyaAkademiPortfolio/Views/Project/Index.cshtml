@model List<AcunMedyaAkademiPortfolio.Models.TblProject>

@{
    ViewBag.Title = "Projelerim";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Projelerim</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Proje Adı</th>
        <th>Proje Görseli</th>
        <th>Proje Kategorisi</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td>@item.ProjectName</td>
            <td>@item.ProjectImageUrl</td>
            <td>@item.ProjectCategoryId</td>
            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-warning"> Güncelle</a></td>
            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-danger"> Sil</a></td>

        </tr>                                                              
    }

</table>
<td><a href="/Project/CreateProject" class="btn btn-success text-white"> Ekle</a></td>
